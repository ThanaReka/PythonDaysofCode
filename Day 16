# Write a function that counts the frequency of each word in a sentence.

# split the sentence into a list

def word_frequency():
    string_of_interest = (input("Input a string: ")).split()
    print(string_of_interest)

    string_to_count = []
 
   # loop till string values present in list str
    for i in string_of_interest:             
 
    # checking for the duplicacy
        if i is not in string_to_count:
 
        # insert value in string_to_count.append(i) 
            string_to_count.append(i) 
             
    for i in range(0, len(string_to_count)):
 
    # count the frequency of each word(present 
    # in string_to_count) in string_of_interest and print
        print('Frequency of', string_to_count[i], 'is :', string_of_interest.count(string_to_count[i]))    

word_frequency() 

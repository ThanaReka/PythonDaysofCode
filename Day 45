# Write a function to check if a number is a prime number

value = int(input("Enter a number: "))

def is_prime(num):
    if num == 1:
        print(num, "is not a prime number")
    elif num > 1:
         # check for factors
         for i in range(2,num):
             if (num % i) == 0:
                 print(num,"is not a prime number")
                 
                 break
             else:
                 print(num,"is a prime number")
    else:
        print(num,"is not a prime number")


is_prime(value)   

